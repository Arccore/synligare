   <extension
         point="org.eclipse.ui.decorators">

      <decorator
            adaptable="true"
            class="command.VersionInconsistencyDecorator"
            icon="icon/inconsistency.png"
            id="org.eclipse.eatop.volvo.versionmanager.decorator1"
            label="VersionInconsistency"
            lightweight="true"
            location="BOTTOM_RIGHT"
            state="true">
         <enablement>
            <objectClass
                  name="org.eclipse.emf.ecore.EObject">
            </objectClass>
         </enablement>
      </decorator>
   </extension>

</plugin>
