               class="action.VersionPropertyAction"
               id="org.eclipse.eatop.volvo.versionmanager.action5"
               label="Version Property"
               menubarPath="org.eclipse.eatop.volvo.versionmanager.menu1/group2">
         </action>
         <action
               class="action.MajorIncreaseVersionAction"
               id="org.eclipse.eatop.volvo.versionmanager.action1"
               label="Version+1 (Major Increase)"
               menubarPath="org.eclipse.eatop.volvo.versionmanager.menu1/group1">
         </action>
         <action
               class="action.MinorIncreaseVersionAction"
               id="org.eclipse.eatop.volvo.versionmanager.action2"
