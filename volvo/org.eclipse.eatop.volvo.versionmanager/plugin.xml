         <menu
               id="org.eclipse.eatop.volvo.versionmanager.menu1"
               label="VersionControl">
            <separator
                  name="group1">
            </separator>
         </menu>
      </objectContribution>
      <objectContribution
            adaptable="false"
            id="org.eclipse.eatop.volvo.versionmanager.objectContribution2"
            objectClass="org.eclipse.eatop.eastadl21.ErrorModelType">
         <action
               class="action.VersionPropertyAction"
               id="org.eclipse.eatop.volvo.versionmanager.action5"
               label="Version Property"
               menubarPath="org.eclipse.eatop.volvo.versionmanager.menu3/separator2">
         </action>
         <action
               class="action.MinorIncreaseVersionAction"
               id="org.eclipse.eatop.volvo.versionmanager.action4"
               label="Version+0.1 (Minor Increase)"
               menubarPath="org.eclipse.eatop.volvo.versionmanager.menu3/separator3">
         </action>
         <action
               class="action.MajorIncreaseVersionAction"
               id="org.eclipse.eatop.volvo.versionmanager.action3"
               label="Version+1 (Major Increase)"
               menubarPath="org.eclipse.eatop.volvo.versionmanager.menu3/separator3">
         </action>
         <action
               class="action.FinalizeTargetVersionAction"
               id="org.eclipse.eatop.volvo.versionmanager.action5"
               label="Synchronize Target Version"
               menubarPath="org.eclipse.eatop.volvo.versionmanager.menu3/separator1">
         </action>
         <action
               class="action.ActionCheckConsistencyEMT"
               id="org.eclipse.eatop.volvo.versionmanager.action6"
               label="Check Version Consistency"
               menubarPath="org.eclipse.eatop.volvo.versionmanager.menu3/separator1">
         </action>
         <menu
               id="org.eclipse.eatop.volvo.versionmanager.menu3"
               label="Version Control"
               path="additions">
            <separator
                  name="separator3">
            </separator>
         </menu>
