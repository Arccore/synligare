               menubarPath="org.eclipse.eatop.volvo.versionmanager.menu1/group1">
         </action>
         <action
               class="action.ActionCheckConsistencyEMT"
               id="org.eclipse.eatop.volvo.versionmanager.action6"
               label="Check Version Consistency"
               menubarPath="org.eclipse.eatop.volvo.versionmanager.menu1/group3">
