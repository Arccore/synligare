<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.eclipse.eatop.volvo.versionmanager.objectContribution2"
            objectClass="org.eclipse.eatop.eastadl21.EAXML">
         <action
               class="action.ActionSetVersion"
               id="org.eclipse.eatop.volvo.versionmanager.action2"
               label="Initialize Version"
               menubarPath="org.eclipse.eatop.volvo.versionmanager.menu/separator">
         </action>
         <menu
               id="org.eclipse.eatop.volvo.versionmanager.menu"
               label="Version Control">
            <separator
                  name="separator">
            </separator>
         </menu>
      </objectContribution>
      <objectContribution
            adaptable="false"
            id="org.eclipse.eatop.volvo.versionmanager.objectContribution1"
            objectClass="org.eclipse.eatop.eastadl21.EAPackage">
         <action
               class="action.ActionSetTargetVersion"
               id="org.eclipse.eatop.volvo.versionmanager.action1"
               label="VersionControl - Set Target Version">
