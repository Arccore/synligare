<plugin>
  
  <extension
         point="org.eclipse.ui.commands">      
      <command
            id="org.eclipse.eatop.metamodelgen.commands.ecoreMMGen"
            name="EATOP - Generate EATOP Ecore MM">
         <commandParameter
               id="org.eclipse.eatop.metamodelgen.commandParameters.ecoreGenOnly"
               name="Generate (persistence mapping) Ecore only"
               optional="true">
         </commandParameter>
         <commandParameter
               id="org.eclipse.eatop.metamodelgen.commandParameters.mmImplGen"
               name="Generate Ecore MM Implementation Code or XSD Schema"
               optional="true">
         </commandParameter>
         <commandParameter
               id="org.eclipse.eatop.metamodelgen.commandParameters.allGen"
               name="Generate All (Ecore MM Implementation Code and XSD Schema)"
               optional="true">
         </commandParameter>
         <commandParameter
               id="org.eclipse.eatop.metamodelgen.commandParameters.cdoGen"
               name="CDO adaption"
               optional="true">
         </commandParameter>
      </command>
   </extension>
  
  <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.eatop.metamodelgen.ui.handlers.EASTADLMMGenUIHandler"
            commandId="org.eclipse.eatop.metamodelgen.commands.ecoreMMGen">
      </handler>
   </extension>
   
	<extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               commandId="org.eclipse.eatop.metamodelgen.commands.ecoreMMGen"
               label="EATOP - Generate EATOP Ecore MM">
                                
            <command
                  commandId="org.eclipse.eatop.metamodelgen.commands.ecoreMMGen"
                  label="Generate (persistence mapping) Ecore only"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <and>
                           <instanceof
                                 value="org.eclipse.core.resources.IFile">
                           </instanceof>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="eap">
                           </test>
                        </and>
                     </iterate>
                  </and>
               </visibleWhen>
               <parameter
                     name="org.eclipse.eatop.metamodelgen.commandParameters.ecoreGenOnly"
                     value="true">
               </parameter>
            </command>
               
            <command
                  commandId="org.eclipse.eatop.metamodelgen.commands.ecoreMMGen"
                  label="Generate Ecore + MM EMF Code"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <and>
                           <instanceof
                                 value="org.eclipse.core.resources.IFile">
                           </instanceof>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="eap">
                           </test>
                        </and>
                     </iterate>
                  </and>
               </visibleWhen>
               <parameter
                     name="org.eclipse.eatop.metamodelgen.commandParameters.mmImplGen"
                     value="true">
               </parameter>
            </command>
            <command
                  commandId="org.eclipse.eatop.metamodelgen.commands.ecoreMMGen"
                  label="Generate Ecore + XSD Schema"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <and>
                           <instanceof
                                 value="org.eclipse.core.resources.IFile">
                           </instanceof>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="eap">
                           </test>
                        </and>
                     </iterate>
                  </and>
               </visibleWhen>
               <parameter
                     name="org.eclipse.eatop.metamodelgen.commandParameters.mmImplGen"
                     value="false">
               </parameter>
            </command>
            
            <command
                  commandId="org.eclipse.eatop.metamodelgen.commands.ecoreMMGen"
                  label="Generate All (Ecore + MM EMF Code + XSD Schema)"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <and>
                           <instanceof
                                 value="org.eclipse.core.resources.IFile">
                           </instanceof>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="eap">
                           </test>
                        </and>
                     </iterate>
                  </and>
               </visibleWhen>
               <parameter
                     name="org.eclipse.eatop.metamodelgen.commandParameters.allGen"
                     value="true">
               </parameter>
            </command>
            
           
           <!-- CDO adaption-->
            <command
                  commandId="org.eclipse.eatop.metamodelgen.commands.ecoreMMGen"
                  label="CDO adaption - Generate Ecore + MM EMF Code"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <and>
                           <instanceof
                                 value="org.eclipse.core.resources.IFile">
                           </instanceof>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="eap">
                           </test>
                        </and>
                     </iterate>
                  </and>
               </visibleWhen>
               <parameter
                     name="org.eclipse.eatop.metamodelgen.commandParameters.mmImplGen"
                     value="true">
               </parameter>
               <parameter
                     name="org.eclipse.eatop.metamodelgen.commandParameters.cdoGen"
                     value="true">
               </parameter>
            </command>
            
            <command
                  commandId="org.eclipse.eatop.metamodelgen.commands.ecoreMMGen"
                  label="CDO adaption - Generate All (Ecore + MM EMF Code + XSD Schema)"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <and>
                           <instanceof
                                 value="org.eclipse.core.resources.IFile">
                           </instanceof>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="eap">
                           </test>
                        </and>
                     </iterate>
                  </and>
               </visibleWhen>
               <parameter
                     name="org.eclipse.eatop.metamodelgen.commandParameters.allGen"
                     value="true">
               </parameter>
               <parameter
                     name="org.eclipse.eatop.metamodelgen.commandParameters.cdoGen"
                     value="true">
               </parameter>
            </command>
            
         </menu>
         
         
      </menuContribution>
   </extension>

</plugin>
