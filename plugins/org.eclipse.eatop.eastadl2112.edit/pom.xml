<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.eclipse.eatop.releng</groupId>
		<artifactId>org.eclipse.eatop.releng.parent</artifactId>
		<version>0.5.0-SNAPSHOT</version>
		<relativePath>../../releng/org.eclipse.eatop.releng.builds/parent/pom.xml</relativePath>
	</parent>
	<groupId>org.eclipse.eatop.plugins</groupId>
	<artifactId>org.eclipse.eatop.eastadl2112.edit</artifactId>
	<version>0.5.0-SNAPSHOT</version>
	<packaging>eclipse-plugin</packaging>
<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<version>2.4.1</version>
				<configuration>
					<filesets>
						<fileset>
							<directory>src</directory>
							<includes>
								<include>**/*</include>
							</includes>
						</fileset>
						<!--
						<fileset>
							<directory>icons</directory>
						</fileset>
						-->
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.github.goldin</groupId>
				<artifactId>copy-maven-plugin</artifactId>
				<version>0.2.5</version>
				<executions>
					<execution>
						<id>clean-unpacked-sources</id>
						<phase>clean</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<resources>
								<resource>
									<targetPath>${basedir}/META-INF</targetPath>
									<file>${basedir}/releng/original/MANIFEST.MF</file>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>unpack-sources</id>
						<phase>process-sources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<resources>
								<resource>
									<targetPath>${basedir}/src</targetPath>
									<directory>${basedir}/lib</directory>
									<includes>
										<include>*src.zip</include>
									</includes>
									<unpack>true</unpack>
								</resource>
								<!--  
								<resource>
									<targetPath>${basedir}/icons</targetPath>
									<directory>${basedir}/lib</directory>
									<includes>
										<include>*icons.jar</include>
									</includes>
									<unpack>true</unpack>
								</resource>
								-->
								<resource>
									<targetPath>${basedir}/META-INF</targetPath>
									<file>${basedir}/releng/MANIFEST.MF</file>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>